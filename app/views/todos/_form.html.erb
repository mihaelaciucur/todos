
<% if @todo.errors.any? %>
<h2>The folowing errors prevented the todo from being saved</h2>
<ul>
  <% @todo.errors.full_messages.each do |msg| %>
  <li>
    <%= msg %>
  </li>
  <% end %>
</ul>
<% end %>


<%= form_for @todo, url: {action: "update"}, html: {class: "nifty_form"} do |f| %>
  <p>	
    <%= f.hidden_field :id %>  
  </p>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>  
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description, size: "60x12" %>
  </p>
  <p>  
   
  	<%= f.submit nameBtn1 unless nameBtn1.blank? %>  	  	  
  	<%= f.submit nameBtn2 unless nameBtn2.blank? %>
  	
           
  </p>  
<% end %>

<%= link_to "Back to todos listing", todos_index_path %>

